<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/noNetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="190dp"
        android:layout_height="168dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/tn_logo" />

    <TextView
        android:id="@+id/app_title"
        style="@style/RTLS_manager"
        android:layout_below="@+id/app_logo"
        android:text="@string/app_name" />

    <!--<TextView-->
    <!--android:id="@+id/tvVersion"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/app_title"-->
    <!--android:gravity="center"-->
    <!--android:paddingBottom="10dp"-->
    <!--android:text="Version X.YY.ZZ" />-->

    <TextView
        android:id="@+id/app_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_title"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/app_subtitle" />

    <Button
        android:id="@+id/btnDiscover"
        style="@style/MtrlBorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_subtitle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:text="@string/do_discovery" />

    <Button
        android:id="@+id/btnSelectAnchors"
        style="@style/MtrlBorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnDiscover"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/screen_title_select_anchors" />

    <Button
        android:id="@+id/btnInstructions"
        style="@style/MtrlBorderlessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSelectAnchors"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/screen_title_instructions" />

</RelativeLayout>
